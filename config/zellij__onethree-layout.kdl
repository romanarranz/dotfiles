// KDL specification: https://kdl.dev/
// Zellij configuration: https://zellij.dev/documentation/creating-a-layout.html

layout {
    pane split_direction="vertical" {
        pane size="50%" borderless=true focus=true
        pane size="50%" split_direction="horizontal" {
            pane name="ws1"
            pane name="ws2"
            pane name="ws3"
        }
    }
}